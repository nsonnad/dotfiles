config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize
config secondsBetweenRepeat 0.1
config focusPreferSameApp false

# aliases
alias full move screenOriginX;screenOriginY screenSizeX;screenSizeY
alias lefthalf move screenOriginX;screenOriginY screenSizeX/2;screenSizeY
alias righthalf move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY
alias topleft corner top-left resize:screenSizeX/2;screenSizeY/2
alias topright corner top-right resize:screenSizeX/2;screenSizeY/2
alias bottomleft corner bottom-left resize:screenSizeX/2;screenSizeY/2
alias bottomright corner bottom-right resize:screenSizeX/2;screenSizeY/2
alias showHintsLeftHand hint FDSAREWQ
alias showNormalHint hint FHDJSKALGRUEIWOQPTY

# app aliases
alias browser       'Google Chrome'
alias browser2      'Firefox'
alias viewer        'Preview'
alias dash          'Dash'
alias editor        'iTerm'
alias atom          'Atom'
alias media         'VLC'

# Resize Bindings
# bind l:shift,ctrl     resize +10% +0
# bind h:shift,ctrl      resize -10% +0
# bind k:shift,ctrl        resize +0 -10%
# bind j:shift,ctrl      resize +0 +10%
# bind l:ctrl,alt      resize -10% +0 bottom-right
# bind h:ctrl,alt       resize +10% +0 bottom-right
# bind k:ctrl,alt         resize +0 +10% bottom-right
# bind j:ctrl,alt       resize +0 -10% bottom-right

# Push Bindings
bind l:ctrl,cmd  ${righthalf}
bind h:ctrl,cmd   ${lefthalf}
bind k:ctrl,cmd     ${full}

# Nudge Bindings
bind l:shift;cmd nudge +10% +0
bind h:shift;cmd  nudge -10% +0
bind k:shift;cmd    nudge +0   -10%
bind j:shift;cmd  nudge +0   +10%

# Throw Bindings
bind l:ctrl;alt;cmd throw right resize
bind h:ctrl;alt;cmd  throw left  resize
bind k:ctrl;alt;cmd    throw up    resize
bind j:ctrl;alt;cmd  throw down  resize

# Focus Bindings
bind j:ctrl,alt focus behind
bind l:ctrl,alt focus right
bind h:ctrl,alt focus left

# Window Hints
bind e:alt ${showHintsLeftHand}
bind e:cmd ${showNormalHint}

# app specific focus
bind 1:alt focus ${browser}
bind 2:alt focus ${browser2}
bind 3:alt focus 'Slack'
bind 4:alt focus ${atom}
bind 5:alt focus ${viewer}
bind 6:alt focus ${dash}
bind 7:alt focus ${media}

# layouts
layout worksplit ${browser}:REPEAT ${lefthalf}
layout worksplit ${editor}:REPEAT ${righthalf}

layout workfull ${browser}:REPEAT ${full}
layout workfull ${editor}:REPEAT ${full}

layout misc ${media}:REPEAT ${lefthalf}
layout misc 'Skype':REPEAT ${righthalf}

layout testgrid ${browser}:REPEAT ${topleft}
layout testgrid ${browser2}:REPEAT ${bottomleft}
layout testgrid ${editor}:REPEAT ${righthalf}

layout ipython ${browser}:REPEAT ${lefthalf}
layout ipython ${browser2}:REPEAT ${righthalf}

bind s:ctrl,cmd sequence layout worksplit | focus ${editor} | focus ${browser}
bind f:ctrl,cmd sequence layout workfull | focus ${browser} | focus ${editor}
bind m:cmd,alt sequence layout misc | focus ${media} | focus 'Skype'
bind g:cmd,alt sequence layout testgrid | focus ${browser} | focus ${browser2} | focus ${editor}
bind p:cmd,alt sequence layout ipython | focus ${browser} | focus ${browser2}
