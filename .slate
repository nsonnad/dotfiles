config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize
config secondsBetweenRepeat 0.1

# aliases
alias full move screenOriginX;screenOriginY screenSizeX;screenSizeY
alias lefthalf move screenOriginX;screenOriginY screenSizeX/2;screenSizeY
alias righthalf move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY
alias topleft corner top-left resize:screenSizeX/2;screenSizeY/2
alias topright corner top-right resize:screenSizeX/2;screenSizeY/2
alias bottomleft corner bottom-left resize:screenSizeX/2;screenSizeY/2
alias bottomright corner bottom-right resize:screenSizeX/2;screenSizeY/2
alias showHintsLeftHand hint FDSAREWQ
alias showNormalHint hint FHDJSKALGRUEIWOQPTY

# app aliases
alias browser       'Firefox'
alias browser2      'Google Chrome'
alias editor        'Sublime Text'
alias media         'VLC'

# Resize Bindings
bind right:ctrl     resize +10% +0
bind left:ctrl      resize -10% +0
bind up:ctrl        resize +0 -10%
bind down:ctrl      resize +0 +10%
bind right:alt      resize -10% +0 bottom-right
bind left:alt       resize +10% +0 bottom-right
bind up:alt         resize +0 +10% bottom-right
bind down:alt       resize +0 -10% bottom-right
bind up:alt,ctrl    ${full}

# Push Bindings
bind right:ctrl,cmd  ${righthalf}
bind left:ctrl,cmd   ${lefthalf}
bind up:ctrl,cmd     push up    bar-resize:screenSizeY/2
bind down:ctrl,cmd   push down  bar-resize:screenSizeY/2

# Nudge Bindings
bind right:shift;alt nudge +10% +0
bind left:shift;alt  nudge -10% +0
bind up:shift;alt    nudge +0   -10%
bind down:shift;alt  nudge +0   +10%

# Throw Bindings
bind right:ctrl;alt;cmd throw right resize
bind left:ctrl;alt;cmd  throw left  resize
bind up:ctrl;alt;cmd    throw up    resize
bind down:ctrl;alt;cmd  throw down  resize

# Focus Bindings
bind up:cmd;alt   focus behind
bind down:cmd;alt focus behind
bind l:ctrl,cmd focus right
bind h:ctrl,cmd focus left

# Window Hints
bind e:alt ${showHintsLeftHand}
bind e:cmd ${showNormalHint}

# app specific focus
bind 1:alt focus ${browser}
bind 2:alt focus ${editor}
bind 3:alt focus 'Skype'
bind 4:alt focus ${browser2}
bind 5:alt focus ${media}

# layouts
layout worksplit ${browser}:REPEAT ${lefthalf}
layout worksplit ${editor}:REPEAT ${righthalf}

layout workfull ${browser}:REPEAT ${full}
layout workfull ${editor}:REPEAT ${full}

layout misc ${media}:REPEAT ${lefthalf}
layout misc 'Skype':REPEAT ${righthalf}

layout testgrid ${browser}:REPEAT ${topleft}
layout testgrid ${browser2}:REPEAT ${bottomleft}
layout testgrid ${editor}:REPEAT ${righthalf}

layout ipython ${browser}:REPEAT ${lefthalf}
layout ipython ${browser2}:REPEAT ${righthalf}

bind s:shift,alt sequence layout worksplit | focus ${editor} | focus ${browser}
bind f:shift,alt sequence layout workfull | focus ${browser} | focus ${editor}
bind m:shift,alt sequence layout misc | focus ${media} | focus 'Skype'
bind g:shift,alt sequence layout testgrid | focus ${browser} | focus ${browser2} | focus ${editor}
bind p:shift,alt sequence layout ipython | focus ${browser} | focus ${browser2}
